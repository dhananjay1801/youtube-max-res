{
  "manifest_version": 3,
  "name": "YouTube Max Quality",
  "version": "1.1.0",
  "description": "Always use the highest available YouTube quality.",
  "icons": { "128": "icons/icon_128.png" },
  "action": { "default_popup": "popup.html", "default_title": "YouTube Max Quality" },
  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
